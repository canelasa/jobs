<div class="booyah-box col-10 offset-1">
  <h1><%= @job.name %></h1>
  <i><%= @job.address %> <%= @job.city %>,<%= @job.state %></i><hr>
  <br/><br/>
  <h1><%= @job.title %></h1><hr>
  <h4>DESCRIPTION</h4><hr>
  <p><%= @job.description %></p>
  <h4>RESPONSIBILITIES</h4><hr>
  <P><%= @job.responsibilities %></p>
  <h4>REQUIREMENTS</h4><hr>
  <p><%= @job.requirements %></p>
  <h4>SKILLS</h4><hr>
  <p><%= @job.skills %></p>
  <h4>MAJORS</h4><hr>
  <p><%= @job.majors %></p>
  <div class="float-right">
    <% if current_user && current_user == @job.user %>
      <%= link_to 'Edit', edit_job_path(@job), class: 'btn btn-primary' %>
      <%= link_to 'Destroy', job_path(@job), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger' %>
      <%= link_to 'APPLY!', new_job_register_path(@job), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<h1 class="text-center">Applicants</h1>

<div class="booyah-box col-xs-10 col-xs-offset-1">
<table class="table table-hover">
    <thead>

      <tr>
        <th>Job Post</th>
        <th>Name</th>
        <th>Phone Number</th>
        <th>Email</th>
        <th>Action<th>
      </tr>
    </thead>

    <tbody>
      <% @job.registers.each do |register| %>
        <% if job.register.present? %>
          <tr>
            <td><%= link_to comment.lesson.name, lesson_path(comment.lesson) %></td>
            <td> <%= comment.full_name %></td>
            <td><%= comment.phone_number %></td>
            <td><%= comment.email %></td>
            <td><%= link_to 'Destroy', lesson_comment_path(comment.lesson, comment),
            method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger btn-xs' %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
</div>
<div class="clear"></div>
