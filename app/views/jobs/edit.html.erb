<div class="booyah-box col-10 offset-1">
  <h1>Edit Your Internship</h1>
  <%= simple_form_for @job do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :responsibilities %>
    <%= f.input :requirements %>
    <%= f.input :skills %>
    <%= f.input :majors %>
    <br />
    <%= f.submit 'Update', class: 'btn btn-primary' %>
  <% end %>
</div>
